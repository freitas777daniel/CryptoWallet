<p id="notice"><%= notice %></p>

<h1>Tipo de Minerações</h1>

<table class="ui celled table">
  <thead>
    <tr>
      <th>Descricao</th>
      <th>Acron</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tipo_mineracaos.each do |tipo_mineracao| %>
      <tr>
        <td><%= tipo_mineracao.descricao %></td>
        <td><%= tipo_mineracao.acron %></td>
        <td>
        <%= link_to 'Mostrar', tipo_mineracao, class:"ui primary button" %>
        <%= link_to 'Editar', edit_tipo_mineracao_path(tipo_mineracao), class:"ui primary button" %>
        <%= link_to 'Apagar', tipo_mineracao, method: :delete, data: { confirm: 'Are you sure?' }, class:"negative ui button" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Cadastrar novo tipo', new_tipo_mineracao_path, class:"positive ui button" %>

<div class="paginate">
<%= will_paginate @tipo_mineracaos %>
</div>