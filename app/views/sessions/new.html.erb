<h1>Log In</h1>

<%= form_tag sessions_path do %>

<% flash.each do |type, msg| %>
    <div class="box">
    <div class="msg"><%= msg %> <br /></div>
    </div>
    
  
<% end %>

    <div class="field">
        <%= label_tag :email %><br />
        <%= text_field_tag :email, params[:email] %>
    </div>

    <div class="field">
        <%= label_tag :password %><br />
        <%= password_field_tag :password %>
    </div>

    <div class="actions"><%= submit_tag "Log In" %></div>
<% end %>
        
