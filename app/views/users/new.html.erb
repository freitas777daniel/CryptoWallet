<h1>Inscreva-se</h1>

<%= form_for @user do |f| %>
    
    <% if @user.errors.any? %>
        <div class="error_messages">
            <h2>Cadastro invalido</h2>
            <ul>
                <% @user.errors.full_messages.each do |message| %>
                    <li><%= message %>
                <% end %>
            </ul>
        </div>
    <% end %>

    <div class="field">
        <%= f.label :email %><br/>
        <%= f.email_field :email %>
    </div>

    <div class="field">
        <%= f.label :password %><br/>
        <%= f.password_field :password %>
    </div>

    <div class="field">
        <%= f.label :password_confirmation %><br/>
        <%= f.password_field :password_confirmation %>
    </div>


    <div class="actions"><%= f.submit %></div>

<% end %>
 